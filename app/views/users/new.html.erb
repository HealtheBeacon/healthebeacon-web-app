<% provide(:title, 'Sign up') %>
<h1 class="text-center">Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control' %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control' %>

      <%= f.label :cernerid %>
      <%= f.text_field :cernerid, class: 'form-control' %>

      <%= f.label :teamid %>
      <%= f.text_field :teamid, class: 'form-control' %>

      <%= f.label :pin, "Pin" %>
      <%= f.password_field :pin, class: 'form-control' %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
